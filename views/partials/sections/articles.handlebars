{{!-- Card --}}
<div class="row">
  <div class="col-sm-12">
    <br>
    <div class="card">
      <div class="card-header">
        <strong>
          <i class="fas fa-newspaper"></i>
          Articles
        </strong>
      </div>

      {{!-- Card for scraped articles --}}
      <div class="card-body" id="scrapedArticles">
        {{#unless saved}}
          <li class="list-group-item" class="nothingScraped">
            Oops! You seem to have missed a step!
            <button type="button" class="scrapeBtn btn">
              Get Some News!
            </button>
          </li>
        {{/unless}}

        <ul class="list-group list-group-flush">
          {{#each articles}}
            <li class="list-group-item" class="articleTitle"> {{title}}
              <div class="float-right">
                <button type="button" class="linkBtn btn" href="{{link}}">
                  <i class="fas fa-link fa-2x"></i>
                </button>
                <button type="button" class="saveBtn btn">
                  <i class="fas fa-save fa-2x"></i>
                </button>
              </div>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
