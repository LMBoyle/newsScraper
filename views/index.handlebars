{{!-- Title --}}
<nav>
  <div>
    {{> header/jumbo}}
  </div>
</nav>

{{!-- Navbar --}}
<nav>
  <div class="nav nav-tabs nav-fill" id="navTabs" role="tabList">
    <a class="nav-item nav-link active" href="#articles" data-toggle="tab" aria-controls="articles" aria-selected="true" id="articleTab"> Articles </a>
    <a class="nav-item nav-link" href="#saved" data-toggle="tab" aria-controls="saved" aria-selected="false" id="savedTab"> Saved Articles </a>
  </div>
</nav>

{{!-- Main --}}
<div class="container">
  {{!-- Card --}}
  <div class="row">
    <div class="col-sm-12">
      <br>
      <div class="card">
        <div class="card-header">
          <strong>
            <i class="fas fa-book-open"></i>
            Articles {{msg}}
          </strong>
        </div>

        <div class="card-body" id="scrapedArticles">
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="articles" role="tabpanel" aria-labelledby="articles-tab">
              <ul class="list-group list-group-flush">
                {{#each data}}
                <li class="list-group-item" class="articleTitle"> {{title}}
                  <div class="float-right">
                    <button type="button" class="linkBtn btn" href="{{link}}">
                      <i class="fas fa-link fa-2x"></i>
                    </button>
                    <button type="button" class="saveBtn btn">
                      <i class="fas fa-save fa-2x"></i>
                    </button>
                  </div>
                </li>
                {{/each}}
              </ul>
            </div>
            <div class="tab-pane fade" id="saved" role="tabpanel" aria-labelledby="saved-tab">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Region -->
  <div class="row">
    <div class="col-sm-12">

      <hr>

      <h5 class="text-center">
        <small> Copyright Luke
        </small>
      </h5>

    </div>
  </div>
</div>
